# Server
PORT=8080
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Azure OpenAI
AZURE_OPENAI_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_ID=gpt-4o
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Azure Cognitive Services Speech
AZURE_SPEECH_KEY=your_speech_key
AZURE_SPEECH_REGION=eastus

# Azure Cosmos DB
COSMOS_ENDPOINT=https://your-cosmos.documents.azure.com:443/
COSMOS_KEY=your_cosmos_key
COSMOS_DATABASE_ID=vaishnav-portfolio
COSMOS_MESSAGES_CONTAINER_ID=messages
COSMOS_SESSIONS_CONTAINER_ID=sessions
COSMOS_USERS_CONTAINER_ID=users

# Azure Storage Blob
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# Microsoft Entra ID (Azure AD)
AAD_ISSUER=https://login.microsoftonline.com/{tenant-id}/v2.0
AAD_AUDIENCE=your-app-id-uri
AAD_CLIENT_ID=your-client-id
AAD_CLIENT_SECRET=your-client-secret
AAD_TENANT_ID=your-tenant-id

# Logging
LOG_LEVEL=info
